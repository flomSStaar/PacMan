<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane style="-fx-background-image: url(/image/fond.png);-fx-background-repeat: no-repeat; -fx-background-position: center center;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.VueAccueil">
    <top>
      <VBox alignment="TOP_RIGHT" maxWidth="1.7976931348623157E308" style="-fx-border-color: red;">
         <children>
                <Button alignment="TOP_RIGHT" mnemonicParsing="false" text="Fermer" textAlignment="CENTER" onAction="#close">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="/image/titre_pacman.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </ImageView>
         </children>
      </VBox>
    </top>
    <center>
        <Button text="Jouer" onAction="#launchGame"/>
    </center>
    <bottom>
        <ImageView pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="/image/PacMan.png" />
            </image>
        </ImageView>
        <HBox alignment="TOP_RIGHT">
            <children>
            </children>
        </HBox>
        <Button mnemonicParsing="false" text="Jouer" />
        <HBox alignment="BOTTOM_RIGHT">
            <children>
                <Button mnemonicParsing="false" text="Parametres" onAction="#parameters"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
